!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FinalProgram
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

  %body
  -if controller.controller_name == "sessions" || controller.controller_name == "registrations" || controller.controller_name == "passwords"
    = yield

  -else
    .header
      .header-nav
        .header-nav__title
          = link_to "[WIP]なまえ", "/"
        - if user_signed_in?
          .header-nav__menu
            %ul
              %li.header-nav__menu--content
                =link_to "マイページ", "/users/#{current_user.id}"
              %li.header-nav__menu--content
                =link_to "検索", "/"  #編集中
              %li.header-nav__menu--content.header-nav__menu--content--small
                =link_to "ログアウト", destroy_user_session_path, method: :delete
              %li.header-nav__menu--content.header-nav__menu--content--post-btn
                =link_to "投稿する", new_meigen_path
          .header-notice
            = notice
          .header-alert
            = alert
        - else
          .header-nav__menu
            %ul
              %li.header-nav__menu--content
                =link_to "[アプリ名]とは", "#about"
              %li.header-nav__menu--content
                =link_to "ログイン", new_user_session_path
              %li.header-nav__menu--content
                =link_to "新規登録", new_user_registration_path
          .header-notice
            = notice
          .header-alert
            = alert
    = yield

    %footer
      .footer__list
        %ul
          %li
            =link_to "よくある質問", "/"
          %li
            =link_to "使い方", "/"
