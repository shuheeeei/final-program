.wrapper
  .account-management
    .account-management__title
      %h1 SIGN-UP
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .account-management__field
        = f.label :name
        %br
        = f.text_field :name, autofocus: true, class: "account-management__field--width"
      .account-management__field
        = f.label :email
        %br
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "account-management__field--width"
      .account-management__field
        = f.label :password
        - if @minimum_password_length
          %br
          = f.password_field :password, autocomplete: "off", length: { maximum: 8}, class: "account-management__field--width"
      .account-management__field
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation, autocomplete: "off", class: "account-management__field--width"
      = f.submit "新規登録", class: "account-management__field--btn"
    = link_to "トップへ戻る", "/"
