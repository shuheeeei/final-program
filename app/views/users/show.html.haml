.wrapper-for-meigen-index
  .my-page-header
    %h1
      = current_user.name
      さんのマイページ
    %ul
      %li
        ●投稿一覧
      %li
        = link_to "/users/#{current_user.id}/likes" do
          ●いいね一覧
      %li#point-column
        = link_to "/points/#{current_user.id}" do
          ●ポイント振った投稿一覧

    .my-page-header__remain-point
      %p
        ポイント残高：
        = current_user.point

  = render partial: "shared/display_products", locals: { meigens: @meigens }

  .pagination-footer
    = paginate(@meigens)
